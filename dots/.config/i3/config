# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# bindsym $mod+Shift+r exec "i3-nagbar -t warning -m 'You pressed the restart i3 shortcut. Do you really want to restart i3?' -b 'Yes' 'i3-msg restart'"
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"
# bindsym $mod+Shift+e exec i3-msg exit
bindsym $mod+Shift+s exec "i3-nagbar -t warning -m 'You pressed the power shortcut. Do you really want to shut down?' -b 'Yes' 'i3exit shutdown'"
bindsym $mod+Shift+t exec "i3-nagbar -t warning -m 'You pressed the reboot shortcut. Do you really want to reboot?' -b 'Yes' 'i3exit reboot'"
bindsym $mod+Shift+l exec "i3-nagbar -t warning -m 'You pressed the sleep shortcut. Do you really want to sleep?' -b 'Yes' 'i3exit suspend'"
bindsym XF86PowerOff exec "i3-nagbar -t warning -m 'You pressed the power button. Do you really want to shut down?' -b 'Yes' 'i3exit shutdown'"

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# set colors
# clean this up later
set $bg-color            #969896
set $inactive-bg-color   #282c34
set $urgent-bg-color     #282c34
set $text-color          #ffa200
set $inactive-text-color #ecd9cb

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          $bg-color
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $urgent-bg-color

# hide all the things
hide_edge_borders both


# bar launcher
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Client assignments
#   Spotify
    for_window [class = "Spotify"] move to $ws10
#   Discord
    assign [class = "discord"] $ws9
#   Thunderbird
    assign [class = "Thunderbird"] $ws8
#   VM
    assign [class = "VirtualBox Machine"] $ws11
    assign [class = "VirtualBox Manager"] $ws11
# Bind i3lock to mod shift x
bindsym $mod+shift+x exec i3lock --color "$bg-color"


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec volume +5% #increase sound volume
bindsym XF86AudioLowerVolume exec volume -5% #decrease sound volume
bindsym XF86AudioMute exec mute # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness

# Touchpad controls
bindsym XF86TouchpadToggle exec /some/path/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindcode --release 107 exec scrot ~/pictures/screenshots/%m-%d_%H:%M:%S.png
bindsym --release Mod1+z exec --no-startup-id scrot ~/pictures/screenshots/%m-%d_%H:%M:%S.png -s -d 1

# Disable caps lock
exec setxkbmap -option caps:none

# Disable focus follows mouse
#focus_follows_mouse no

# Enable workspace double tap to switch back
workspace_auto_back_and_forth yes

# Custom wallpaper
exec_always feh --bg-scale ~/.wallpaper

# Compton for opacity
exec compton -b --backend glx --vsync opengl-swc

# i3-gaps stuff
gaps inner 2
gaps outer 4

# Startup
exec redshift -l 45.3277070:-75.7878600

# remove title bars
for_window [class="^.*"] border pixel

exec pia
exec setleds -D +num
